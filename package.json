{
  "name": "plusmedical",
  "version": "0.1.0",
  "description": "PlusMedical",
  "main": "index.js",
  "scripts": {
    "build:dll": "webpack --config webpack.dll.config.js --mode production",
    "build:dev": "webpack-dev-server --config webpack.dev.config.js",
    "build": "webpack --config webpack.config.js --mode production",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "start": "serve ./dist -s -p ${PORT:-4000}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plus-medical/frontend.git"
  },
  "keywords": [
    "react"
  ],
  "author": "Ivan Sanchez, Cesar Galindo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plus-medical/frontend/issues"
  },
  "homepage": "https://github.com/plus-medical/frontend#readme",
  "dependencies": {
    "@babel/runtime": "^7.16.7",
    "date-fns": "^2.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.22.5",
    "react-icons": "^4.3.1",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "serve": "^13.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "add-asset-html-webpack-plugin": "^3.2.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.5.1",
    "dotenv-webpack": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "file-loader": "^6.2.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "mini-css-extract-plugin": "^2.4.6",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.15",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.47.0",
    "sass-loader": "^12.4.0",
    "sinon": "^12.0.1",
    "standard": "^16.0.4",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/standard/eslintrc.json"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "pre-push": "npm run lint:fix"
    }
  },
  "standard": {
    "ignore": [
      "**/dist/*"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/__test__/setupTest.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif)$": "<rootDir>/src/__mocks__/staticMock.js",
      "\\.(css||sass||scss)$": "<rootDir>/src/__mocks__/styleMocks.js"
    }
  }
}